{
  "name": "seamless-backend",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "NODE_ENV=production node dist/src/index.js",
    "dev": "NODE_ENV=development nodemon ./src/index.ts",
    "test": "NODE_ENV=test jest --verbose",
    "test:watch": "jest --watchAll --verbose",
    "lint": "eslint src/**/*.ts",
    "docker:build": "docker build --no-cache -t public.ecr.aws/z4c1u6t7/seamless-backend:1 .",
    "docker:run": "docker run -d -p 3000:3000 --env-file=.env public.ecr.aws/z4c1u6t7/seamless-backend:1",
    "docker:push": "aws ecr-public get-login-password --region us-east-1 | docker login --username AWS --password-stdin public.ecr.aws && docker push public.ecr.aws/z4c1u6t7/seamless-backend:1",
    "clear-builds": "rm -rf dist && rm -rf public && rm -rf ../seamless-frontend/dist",
    "build-frontend": "cd ../seamless-frontend && npm run build",
    "copy-frontend": "mkdir public dist/public && cp -r ../seamless-frontend/dist/* public && cp -r ../seamless-frontend/dist/* dist/public",
    "build-app": "npm run clear-builds && npm run build-frontend && npm run build && npm run copy-frontend",
    "build-push": "npm run docker:build && npm run docker:push"
  },
  "author": "Seamless",
  "license": "ISC",
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@aws-sdk/client-apigatewaymanagementapi": "^3.292.0",
    "@aws-sdk/client-ecr": "^3.290.0",
    "@aws-sdk/client-ecs": "^3.290.0",
    "@aws-sdk/client-sfn": "^3.282.0",
    "@octokit/core": "^4.2.0",
    "@octokit/oauth-app": "^4.2.0",
    "@octokit/rest": "^19.0.7",
    "@prisma/client": "^4.11.0",
    "axios": "^1.3.4",
    "babel-eslint": "^10.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "ioredis": "^5.3.1",
    "prisma": "^4.11.0",
    "ulidx": "^0.5.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.21.0",
    "@babel/core": "^7.21.0",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.21.0",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.14.2",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.53.0",
    "@typescript-eslint/parser": "^5.53.0",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.4.3",
    "nodemon": "^2.0.21",
    "prettier-plugin-organize-imports": "^3.2.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.5"
  }
}
